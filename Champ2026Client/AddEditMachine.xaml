<Window x:Class="Champ2026Client.AddEditMachine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Champ2026Client"
        mc:Ignorable="d"
        Title="AddEditMachine" Height="900" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Margin="5">
            <Label Content="Название ТА *"/>
            <TextBox x:Name="tbName" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" Margin="5">
            <Label Content="Модель ТА *"/>
            <ComboBox x:Name="cbModel" Height="30" SelectedItem="{Binding Model.Model1}"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="2" Margin="5">
            <Label Content="Режим работы *"/>
            <ComboBox x:Name="cbWorkMode" Height="30" SelectedItem="{Binding WorkMode.WorkMode1}"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="0" Margin="5">
            <Label Content="Адрес *"/>
            <TextBox x:Name="tbLocation" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1" Margin="5">
            <Label Content="Место *"/>
            <TextBox x:Name="tbPlace" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="2" Margin="5">
            <Label Content="Координаты"/>
            <TextBox x:Name="tbCords" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="0" Margin="5">
            <Label Content="Номер автомата *"/>
            <TextBox x:Name="tbSerialNumber" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="1" Margin="5">
            <Label Content="Время работы (формат 08:00-22:00)"/>
            <TextBox x:Name="tbWorkingHours" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="2" Margin="5">
            <Label Content="Часовой пояс *"/>
            <ComboBox x:Name="cbTimezone" Height="30" SelectedItem="{Binding TimezoneNavigation.Timezone1}"/>
        </StackPanel>
    </Grid>
</Window>
