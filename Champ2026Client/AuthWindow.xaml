<Window x:Class="Champ2026Client.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Champ2026Client"
        mc:Ignorable="d"
        Title="AuthWindow" Height="200" Width="250" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Логин" HorizontalAlignment="Center"/>
            <TextBox x:Name="tbLogin" Text="novikov"/>
            <Label Content="Пароль" HorizontalAlignment="Center"/>
            <PasswordBox x:Name="tbPassword" Password="322"/>
            <Button x:Name="btnAuth" Content="Войти" Click="btnAuth_Click" IsDefault="True"/>
            <Button x:Name="btnCancel" Content="Отмена" IsCancel="True" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
