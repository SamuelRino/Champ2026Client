<Window
    x:Class="Champ2026Client.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Champ2026Client"    
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1200"
    Height="850"
    Loaded="Window_Loaded"
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Grid.ColumnSpan="2" Source="/images/Logo.png"  HorizontalAlignment="Left"/>

        <Expander FlowDirection="RightToLeft" VerticalAlignment="Top" HorizontalAlignment="Right" Grid.Column="1" Grid.RowSpan="2" Panel.ZIndex="2" Background="#00000000">
            <Expander.Header>
                <StackPanel Orientation="Horizontal" Height="55" FlowDirection="LeftToRight">
                    <Image x:Name="imageUserPhoto" Source="/images/search.png"/>
                    <StackPanel Margin="5" VerticalAlignment="Center" >
                        <TextBlock x:Name="tbUserFullName" Text="Автоматов А. А."/>
                        <TextBlock x:Name="tbUserRole" Text="Администратор"/>
                    </StackPanel>
                </StackPanel>
            </Expander.Header>
            <StackPanel>
                <TextBlock Text="121"/>
            </StackPanel>
        </Expander>

        <Grid Background="DarkGray" Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition x:Name="cdColumn1" Width="auto"/>
                <ColumnDefinition x:Name="cdColumn2" Width="25"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Button x:Name="btnExpand" Click="btnExpand_Click" Grid.ColumnSpan="3" HorizontalAlignment="Right" Background="Black">
                <Image Source="/images/bars.png"/>
            </Button>

            <Image Source="/images/search.png" Grid.Row="1" Margin="2" VerticalAlignment="Top"/>
            <Image Source="/images/desktop.png" Grid.Row="2" VerticalAlignment="Top"/>
            <Image Source="/images/file-text-o.png" Grid.Row="3" VerticalAlignment="Top"/>
            <Image Source="/images/shopping-cart.png" Grid.Row="4" VerticalAlignment="Top"/>
            <Image Source="/images/cogs.png" Grid.Row="5" VerticalAlignment="Top"/>

            <TextBlock Text="Главная" Grid.Row="1" Grid.Column="1"/>
            <Button x:Name="btnMainPage" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Panel.ZIndex="1" BorderBrush="Transparent" Background="Transparent"/>

            <TextBlock Text="Монитор ТА" Grid.Row="2" Grid.Column="1"/>
            <Button x:Name="btnVMDisplay" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Panel.ZIndex="1" BorderBrush="Transparent" Background="Transparent"/>

            <TextBlock Grid.Row="3" Grid.Column="1" Text="Детальные отчёты"/>
            <Expander Grid.Row="3" Grid.Column="1" HorizontalAlignment="Stretch" Grid.ColumnSpan="2" FlowDirection="RightToLeft">

            </Expander>

            <TextBlock Grid.Row="4" Grid.Column="1" Text="Учет ТМЦ"/>
            <Expander Grid.Row="4" Grid.Column="1" HorizontalAlignment="Stretch" Grid.ColumnSpan="2" FlowDirection="RightToLeft">

            </Expander>

            <TextBlock Grid.Row="5" Grid.Column="1" Text="Администрирование"/>
            <Expander Grid.Row="5" Grid.Column="1" HorizontalAlignment="Stretch" Grid.ColumnSpan="2" FlowDirection="RightToLeft">
                <StackPanel>
                    <Button Content="Торговые автоматы" Margin="5"/>
                    <Button Content="Компании" Margin="5"/>
                    <Button Content="Пользователи" Margin="5"/>
                    <Button Content="Дополнительные" Margin="5"/>
                </StackPanel>
            </Expander>
        </Grid>


        <Grid Grid.Row="1" Grid.Column="1" Background="Black">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Foreground="White" FontSize="20">ООО Торговые автоматы</Label>

            <Frame Grid.Row="1" x:Name="fMainFrame" Background="White">

            </Frame>
        </Grid>
    </Grid>
</Window>
